<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Compass</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="nav-scroller py-1 mb-4">
        <nav class="nav nav-underline justify-content-center" aria-label="Category navigation">
            <a class="nav-item nav-link mx-3" href="#" aria-label="Computer Science category">Computer Science</a>
            <a class="nav-item nav-link mx-3" href="#" aria-label="Engineering category">Engineering</a>
            <a class="nav-item nav-link mx-3" href="#" aria-label="Health category">Health</a>
            <a class="nav-item nav-link mx-3" href="#" aria-label="Liberal Arts category">Liberal Arts</a>
            <a class="nav-item nav-link mx-3" href="#" aria-label="Other category">Other</a>
        </nav>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div id="posts" class="col-md-3 mb-4 mx-4">
                <h2 class="fs-4 fw-semibold mb-3">Create New Post</h2>
                <form class="mb-4" action="/posts" method="POST">
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <input type="text" class="form-control" id="category" name="category" required>
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary w-100">Submit Post</button>
                </form>

                <h3 class="fs-5 fw-semibold mb-3">Recent Posts</h3>
                <div class="list-group list-group-flush">
                    <% posts.forEach(post => { %>
                        <a href="#" class="list-group-item list-group-item-action p-3">
                            <strong class="d-block mb-1"><%= post.title %></strong>
                            <small class="text-muted"><%= post.category %></small>
                        </a>
                    <% }) %>
                </div>
            </div>

            <main class="col-md-8">
                <div class="row post-row g-4">
                    <% posts.forEach(post => { %>
                        <div class="col-md-6">
                            <article class="border rounded overflow-hidden h-100 position-relative">
                                <div class="p-4 d-flex flex-column h-100">
                                    <span class="badge bg-secondary mb-2"><%= post.category %></span>
                                    <h3 class="h5 mb-3"><%= post.title %></h3>
                                    <p class="card-text mb-4"><%= post.content %></p>
                                    <a href="#" class="icon-link mt-auto stretched-link">
                                        Read more
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor">
                                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                                        </svg>
                                    </a>
                                </div>
                            </article>
                        </div>
                    <% }) %>
                </div>
            </main>
        </div>
    </div>
</body>
</html>