<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Aid</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="nav-scroller py-1 mb-3 border-bottom border-black">
        <nav class="nav nav-underline justify-content-evenly">
            <a class="nav-item nav-link text-white" href="#">Computer Science</a>
            <a class="nav-item nav-link text-white" href="#">Engineering</a>
            <a class="nav-item nav-link text-white" href="#">Health</a>
            <a class="nav-item nav-link text-white" href="#">Liberal Arts</a>
            <a class="nav-item nav-link text-white" href="#">Other</a>
        </nav>
    </div>

    <div>
        <div class="row">
            <div id="posts" class="d-flex flex-column align-items-stretch flex-shrink-0 mx-4" style="width: 380px;">
                <a href="/" class="d-flex align-items-center flex-shrink-0 p-3 link-body-emphasis text-decoration-none ">
                  <svg class="bi pe-none me-2" width="125" height="24"><use xlink:href=""></use></svg>
                  <span class="fs-5 fw-semibold">Posts</span>
                </a>
                <form class="mb-2 " action="/submit" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Category</label>
                        <input type="text" class="form-control" id="category" name="category" required>
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </form>
                <div class="list-group list-group-flush scrollarea mx-2">
                  <% posts.forEach(post => { %>
                    <a href="#" class="list-group-item list-group-item-action py-3 lh-sm" aria-current="true">
                        <div class="d-flex w-100 align-items-center justify-content-around">
                          <strong class="mb-1"><%= post.title %></strong>
                        </div>
                        
                      </a>
                  <% }) %>
                </div>
            </div>
            

            <div class="col-md-9">
                    <div class="row post-row">
                        <% posts.forEach(post => { %>
                          <div class="col-md-6 mb-4">
                            <div class="row g-0 border rounded overflow-hidden flex-md-row shadow-sm h-md-250 position-relative">
                              <div class="col p-4 d-flex flex-column position-static">
                                <strong class="d-inline-block mb-2 text-primary-emphasis"><%= post.category %></strong>
                                <h3 class="mb-3"><%= post.title %></h3>
                                <!-- <div class="mb-1 text-body-secondary">Nov 12</div> -->
                                <p class="card-text mb-auto"><%= post.content %></p>
                                <a href="#" class="icon-link gap-1 icon-link-hover stretched-link">
                                  Continue reading
                                  <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
                                </a>
                              </div>
                              <div class="col-auto d-none d-lg-block">
                                <!--Allow user to add their own image-->
                                <img class="" width="200" height="250" src="/images/cat.jpg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                                  <title>Placeholder</title>
                                  <rect width="100%" height="100%" fill="#55595c"></rect>
                                  
                                </img>
                              </div>
                            </div>
                          </div>
                        <% }) %>
                      </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>